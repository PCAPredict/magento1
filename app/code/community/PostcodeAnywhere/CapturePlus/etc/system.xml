<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <postcodeanywhere translate="label" module="captureplus">
            <label>Addressy</label>
            <sort_order>1000</sort_order>
        </postcodeanywhere>
    </tabs>
    <sections>
        <captureplus translate="label" module="captureplus">
            <label>Settings</label>
            <tab>postcodeanywhere</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <login translate="label">
                    <label>Log in to Addressy</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>0</expanded>
                    <comment>
                        <![CDATA[<div style="margin-bottom:10px;">To set up an Addressy account, please visit our <a href="https://www.addressy.com" target="_blank" style="margin-left:0;">website</a></div>]]>
                    </comment>
                    <fields>
                        <account_email translate="label">
                            <label>Email: </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </account_email>
                        <pca_password>
                            <label>Password: </label>
                            <frontend_type>obscure</frontend_type>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </pca_password>
                        <login_button translate="label">
                            <label />
                            <frontend_type>button</frontend_type>
                            <frontend_model>captureplus/adminhtml_system_config_form_button</frontend_model>
                            <comment>
                                <![CDATA[<span id="captureplus_login_feedback"></span>]]>
                            </comment>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </login_button>
                        <account_code translate="label">
                            <label>Account code: </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </account_code>
						<mercury_token translate="label">
							<label>Auth Token: </label>
							<frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</mercury_token>
                    </fields>
                </login>
            </groups>
            <groups>
                <settings translate="label">
                    <label>Advanced Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment></comment>
                    <fields>
                        <custom_code_frontend translate="label">
                            <label>Frontend custom code: </label>
                            <frontend_type>textarea</frontend_type>
                            <comment>
                                <![CDATA[Paste any custom JavaScript code that you have in here]]>
                            </comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </custom_code_frontend>
                        <custom_code_admin translate="label">
                            <label>Admin custom code: </label>
                            <frontend_type>textarea</frontend_type>
                            <comment>
                                <![CDATA[Paste any custom JavaScript code that you have in here]]>
                            </comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </custom_code_admin>
                    </fields>
                </settings>
            </groups>
        </captureplus>
    </sections>
</config>