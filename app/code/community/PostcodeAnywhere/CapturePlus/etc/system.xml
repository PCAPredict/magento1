<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <postcodeanywhere translate="label" module="captureplus">
            <label>PCA Predict</label>
            <sort_order>1000</sort_order>
        </postcodeanywhere>
    </tabs>
    <sections>
        <captureplus translate="label" module="captureplus">
            <label>Settings</label>
            <tab>postcodeanywhere</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Capture Plus Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <comment><![CDATA[<div style="margin-bottom:10px;">To set up a PCA Predict account, please visit our <a href="http://www.pcapredict.com/support/articles/article/address-finder-for-magento/" target="_blank" style="margin-left:0;">Getting Started</a> page</div>]]></comment>
                    <fields>
                        <account_code translate="label">
                            <label>Account code: </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </account_code> 
                        <custom_code translate="label">
                          <label>Custom code: </label>
                          <frontend_type>textarea</frontend_type>
                          <comment><![CDATA[Paste any custom JavaScript code that you have in here]]></comment>
                          <sort_order>2</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                        </custom_code>
                        <custom_mappings2 translate="label">
                            <label>Custom mappings: </label>
                            <frontend_type>textarea</frontend_type>
                            <comment><![CDATA[Paste any custom field mappings that you have in here]]></comment>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </custom_mappings2>                    
                    </fields>
                </settings>
            </groups>
        </captureplus>
    </sections>

</config>