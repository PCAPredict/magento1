<?xml version="1.0"?>
<config>
    <modules>
        <Addressy_AddressLookup>
            <version>2.0.0.1</version>
        </Addressy_AddressLookup>
    </modules>
    <global>
        <models>
            <addressy_addresslookup>
                <class>Addressy_AddressLookup_Model</class>
            </addressy_addresslookup>
        </models>
        <helpers>
            <addresslookup>
                <class>Addressy_AddressLookup_Helper</class>
            </addresslookup>
        </helpers>
        <blocks>
            <addresslookup>
                <class>Addressy_AddressLookup_Block</class>
            </addresslookup>
        </blocks>
    </global>
    <frontend>
        <layout>
            <updates>
                <addresslookup>
                    <file>addressy.xml</file>
                </addresslookup>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <addresslookup>
                    <file>addressy.xml</file>
                </addresslookup>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <addresslookup_options translate="title" module="addresslookup">
                                            <title>Addressy Settings</title>
                                        </addresslookup_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>